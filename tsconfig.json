{
  "compilerOptions": {
    /* Base Options */
    "target": "ES2022",                       // Target modern JavaScript features
    "module": "NodeNext",                     // Use the modern Node.js module system
    "esModuleInterop": true,                  // Allows importing CommonJS modules
    "forceConsistentCasingInFileNames": true, // Enforces case-sensitive file naming

    /* Strictness */
    "strict": true,                           // Enables all strict type-checking options
    "skipLibCheck": true,                     // Skips type checking of declaration files

    /* Output */
    "outDir": "./dist"                        // Where to output the compiled JavaScript
  },
  "include": ["src/**/*"]                     // Which files to include in compilation
}